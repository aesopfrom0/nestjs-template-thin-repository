generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Hello {
  id        Int      @id @default(autoincrement())
  message   String   @default("안녕하세요!")
  mood      MoodType @default(HAPPY)
  timestamp DateTime @default(now())
  byes      Bye[]
}

model Bye {
  id        Int      @id @default(autoincrement())
  message   String   @default("안녕히 가세요!")
  mood      MoodType @default(EXCITED)
  waveCount Int      @default(1)
  helloId   Int
  hello     Hello    @relation(fields: [helloId], references: [id])

  @@index([helloId])
}

enum MoodType {
  HAPPY
  EXCITED
  SLEEPY
  HUNGRY
}
